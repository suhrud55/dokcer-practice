# Use Ubuntu as base image
FROM ubuntu:latest

# Set working directory
WORKDIR /app

# Copy local files to /app
COPY . /app

# Install Nginx
RUN apt update -y && \
    apt install -y nginx && \
    apt clean && \
    rm -rf /var/lib/apt/lists/*

# Start Nginx in the foreground (required for Docker)
CMD ["nginx", "-g", "daemon off;"]
